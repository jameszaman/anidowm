{
  "name": "anidown",
  "version": "1.0.2",
  "description": "An app to download stuff from internet.",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder -p always"
  },
  "author": "James Hedayet Zaman",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^10.0.0",
    "electron-updater": "^4.3.9"
  },
  "build": {
    "appId": "com.james.anidown",
    "productName": "anidown",
    "target": "NSIS"
  },
  "nsis": {
    "allowToChangeInstallationDirectory": "true",
    "oneClick": "false"
  },
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7"
  }
}
